<body>
  <div class="gallery-container">
    <h1>Dynamic Image Slider Gallery</h1>

    <div class="slider-container">
      <div class="slider" id="slider"></div>

      <!-- Navigation Buttons -->
      <button class="nav-btn prev">❮</button>
      <button class="nav-btn next">❯</button>

      <!-- Caption -->
      <div class="caption" id="caption">Loading...</div>
    </div>

    <!-- Thumbnails -->
    <div class="thumbnails" id="thumbnails"></div>
  </div>

  <script>
    // Array of dynamic images and captions
    const images = [
      {
        url: "https://picsum.photos/id/1005/900/500",
        caption: "Beautiful Lake View"
      },
      {
        url: "https://picsum.photos/id/1018/900/500",
        caption: "Sunset Over the Mountains"
      },
      {
        url: "https://picsum.photos/id/1020/900/500",
        caption: "Bridge in the Forest"
      },
      {
        url: "https://picsum.photos/id/1025/900/500",
        caption: "Lovely Golden Retriever"
      },
      {
        url: "https://picsum.photos/id/1031/900/500",
        caption: "Starry Night Sky"
      }
    ];

    const slider = document.getElementById("slider");
    const thumbnails = document.getElementById("thumbnails");
    const caption = document.getElementById("caption");
    let index = 0;

    // Dynamically create slides and thumbnails
    images.forEach((img, i) => {
      const image = document.createElement("img");
      image.src = img.url;
      slider.appendChild(image);

      const thumb = document.createElement("img");
      thumb.src = img.url;
      thumb.addEventListener("click", () => {
        index = i;
        updateSlider();
        resetTimer();
      });
      thumbnails.appendChild(thumb);
    });

    function updateSlider() {
      slider.style.transform = `translateX(${-index * 100}%)`;
      caption.textContent = images[index].caption;

      // Highlight active thumbnail
      document.querySelectorAll(".thumbnails img").forEach((thumb, i) => {
        thumb.classList.toggle("active", i === index);
      });
    }

    // Navigation buttons
    document.querySelector(".next").addEventListener("click", () => {
      index = (index + 1) % images.length;
      updateSlider();
      resetTimer();
    });

    document.querySelector(".prev").addEventListener("click", () => {
      index = (index - 1 + images.length) % images.length;
      updateSlider();
      resetTimer();
    });

    // Auto-slide every 4 seconds
    let timer = setInterval(nextSlide, 4000);

    function nextSlide() {
      index = (index + 1) % images.length;
      updateSlider();
    }

    function resetTimer() {
      clearInterval(timer);
      timer = setInterval(nextSlide, 4000);
    }

    // Initialize
    updateSlider();
  </script>
</body>
</html>
