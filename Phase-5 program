  <title>Dynamic Image Slider</title>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: "Poppins", sans-serif;
    }

    body {
      background: linear-gradient(120deg, #1a1a1a, #444);
      color: #fff;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      min-height: 100vh;
    }

    .gallery-container {
      width: 90%;
      max-width: 900px;
      text-align: center;
    }

    h1 {
      margin-bottom: 20px;
      font-size: 2em;
      letter-spacing: 2px;
      color: #ffdd57;
    }

    .slider-container {
      position: relative;
      overflow: hidden;
      border-radius: 15px;
      box-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
    }

    .slider {
      display: flex;
      transition: transform 0.7s ease-in-out;
      width: 100%;
    }

    .slider img {
      width: 100%;
      border-radius: 15px;
    }

    .nav-btn {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background: rgba(0, 0, 0, 0.5);
      border: none;
      color: #fff;
      padding: 10px 15px;
      font-size: 28px;
      cursor: pointer;
      border-radius: 50%;
      transition: 0.3s;
    }

    .nav-btn:hover {
      background: rgba(255, 255, 255, 0.3);
    }

    .prev {
      left: 15px;
    }

    .next {
      right: 15px;
    }

    .caption {
      background: rgba(0, 0, 0, 0.7);
      font-size: 18px;
      padding: 10px;
      text-align: center;
      position: absolute;
      bottom: 0;
      width: 100%;
      border-radius: 0 0 15px 15px;
    }

    .thumbnails {
      display: flex;
      justify-content: center;
      margin-top: 15px;
      flex-wrap: wrap;
      gap: 8px;
    }

    .thumbnails img {
      width: 80px;
